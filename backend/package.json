{
	"name": "backend-template",
	"version": "1.0.0",
	"description": "The overall template for Express-App development containing basic configurations and structure for API development.",
	"license": "MIT",
	"author": "Danyal Ansari",
	"type": "module",
	"main": "server.js",
	"imports": {
		"#root/*": "./*.js",
		"#app/*": "./app/*.js",
		"#config/*": "./config/*.js",
		"#env/*": "./config/*.env",
		"#services/*": "./src/services/*.js",
		"#repository/*": "./src/repository/*.js",
		"#routes/*": "./src/routes/*.js",
		"#models/*": "./src/models/*.js",
		"#middlewares/*": "./src/middlewares/*.js",
		"#controllers/*": "./src/controllers/*.js",
		"#utils/*": "./utils/*.js"
	},
	"scripts": {
		"dev": "nodemon server.js",
		"start": "node server.js",
		"build": "npm install",
		"debug": "NODE_OPTIONS='--experimental-vm-modules' node --env-file=.env server.js"
	},
	"dependencies": {
		"bcrypt": "^6.0.0",
		"compression": "^1.8.0",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.0",
		"helmet": "^8.1.0",
		"hpp": "^0.2.3",
		"http-errors": "^2.0.0",
		"joi": "^17.13.3",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.15.0",
		"morgan": "^1.10.0",
		"multer": "^2.0.1",
		"serve-favicon": "^2.5.1",
		"stripe": "^18.2.1",
		"validator": "^13.15.15",
		"winston": "^3.17.0"
	}
}
